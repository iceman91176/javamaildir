<?xml version="1.0" encoding="UTF-8"?>
<project>
    <pomVersion>3</pomVersion>
    <artifactId>javamaildir</artifactId>
    <name>javamaildir</name>
    <groupId>javamaildir</groupId>
    <currentVersion>0.5.2-SNAPSHOT</currentVersion>
    <inceptionYear>2002</inceptionYear>
    <package>net.ukrpost.storage.maildir</package>
    <shortDescription>JavaMaildir</shortDescription>
    <dependencies>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
            <type>jar</type>
        </dependency>

        <dependency>
            <groupId>undistributable</groupId>
            <artifactId>mail</artifactId>
            <version>1.3.2</version>
            <type>jar</type>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>undistributable</groupId>
            <artifactId>activation</artifactId>
            <version>1.0.2</version>
            <type>jar</type>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <type>jar</type>
        </dependency>
    </dependencies>

    <build>
        <nagEmailAddress>zhukov.alex@gmail.com</nagEmailAddress>
        <sourceDirectory>src</sourceDirectory>
        <resources>
            <resource>
                <directory>${basedir}/src</directory>
                <includes>
                    <include>META-INF/MANIFEST.MF</include>
                    <include>META-INF/javamail.providers</include>
                </includes>
            </resource>
        </resources>
        <unitTestSourceDirectory>tests</unitTestSourceDirectory>
        <unitTest>
            <resources>
                <resource>
                    <directory>${basedir}/tests</directory>
                    <includes>
                        <include>**/*.eml</include>
                    </includes>
                </resource>
            </resources>
            <includes>
                <include>**/*TestCase.java</include>
            </includes>
        </unitTest>
    </build>
</project>

